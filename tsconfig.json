{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "#root/*": ["./src/*"],
      "#ping/*": ["./ping/*"]
    }
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules"]
}